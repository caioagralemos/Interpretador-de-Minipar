# Thread 1 – Cálculo do fatorial
output("Digite um número para calcular o fatorial:");
n = 0;
n = input();
i = 1;  # Começa de 1 para o fatorial
fat = 1;
while (i <= n) {
    fat = fat * i;
    i = i + 1;
}
output("Fatorial: ");
output(fat);

# Thread 2 – Série de Fibonacci
output("Digite a quantidade de termos da série de Fibonacci:");
t = 0;
t = input();
a = 0;
b = 1;
i = 0;
output("Fibonacci:");
while (i < t) {
    output(a);
    temp = b;
    b = a + b;
    a = temp;
    i = i + 1;
}
